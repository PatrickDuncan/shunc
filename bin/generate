#!/bin/sh
# Run from the repo's root

DIST='dist'
SCRIPT="$DIST/shunc"

# Create the dist folder
[ -d "$DIST" ] || mkdir "$DIST"

# Create the script
echo '#!/bin/sh' > "$SCRIPT"
cat sh/* |
{
while read -r func; do
  if [ "$(echo "$func" | cut -c1)" != '#' ] &&
     [ "$func" != "\\n" ]
  then
    echo "$func" >> "$SCRIPT"
  fi
done
}

# Make it executable
chmod u+x "$DIST/shunc"
